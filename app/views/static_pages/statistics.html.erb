<%= provide(:title, 'Statistics') %>
<div class="container content">
  <div class="profile-section">
    <div class="pageHeader">
      <div class="headerInfo">
        <h1>Site Statistics</h1><br>
        <p><%= Time.now.strftime("%I:%M %p on %b %d, %Y") %></p>
      </div>
    </div>
    <div class="row">
      <div class="span12 adminView">
        <div class="adminColumn">
          <h2>
            <%= image_tag("matchMeIcon.png", alt: "Pets") %>
            <%= Pet.all.count %> Pets
          </h2>
          <ul>
	          <li>
		          <h3>Available 
			          <span style="padding-left: 10px;"><%= @available_pets %></span>
			          <span class="sparklines"><!-- <%= @available_journal %> --></span> 
			        </h3>
            </li>
	          <li>
		          <h3>Absent 
			          <span style="padding-left: 10px;"><%= @absent_pets %></span>
			          <span class="sparklines"><!-- <%= @absent_journal %> --></span> 
			        </h3>
            </li>
	          <li>
		          <h3>Adopted 
			          <span style="padding-left: 10px;"><%= @adopted_pets %></span>
			          <span class="sparklines"><!-- <%= @adopted_journal %> --></span> 
			        </h3>
            </li>
	          <li>
		          <h3>Unavailable 
			          <span style="padding-left: 10px;"><%= @unavailable_pets %></span>
			          <span class="sparklines"><!-- <%= @unavailable_journal %> --></span> 
			        </h3>
            </li>
            <li>
		          <h3>Most Common Names</h3><br>
		          <ol>
			          <% @names.each do |n| %>
			          <li><%= n %></li>
			          <% end %>
		          </ol>
            </li>
          </ul>
        </div>
        <div class="adminColumn">
          <h2>
            <%= image_tag("catIcon.png") %> 
            <%= @cats %> Cats
          </h2>
          <ul>
            <li>
	            <h3>Available
		            <span><%= @available_cats %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Absent
		            <span><%= @absent_cats %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Adopted
		            <span><%= @adopted_cats %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Unavailable
		            <span><%= @unavailable_cats %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Most Common Cat Names</h3><br>
		          <ol>
			          <% @cat_names.each do |n| %>
			          <li><%= n %></li>
			          <% end %>
		          </ol>
            </li>
          </ul>
        </div>
        <div class="adminColumn">
          <h2>
            <%= image_tag("dogIcon.png") %> 
            <%= @dogs %> Dogs
          </h2>
          <ul>
            <li>
	            <h3>Available
		            <span><%= @available_dogs %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Absent
		            <span><%= @absent_dogs %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Adopted
		            <span><%= @adopted_dogs %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Unavailable
		            <span><%= @unavailable_dogd %></span>
		          </h3>
		        </li>
            <li>
	            <h3>Most Common Dog Names</h3><br>
		          <ol>
			          <% @dog_names.each do |n| %>
			          <li><%= n %></li>
			          <% end %>
		          </ol>
            </li>
          </ul>
        </div>
        <div class="clearfix"></div>
        <div class="adminColumn">
          <h2><%= image_tag("editProfileIcon.png", alt: "Users") %><%= User.all.count %> Users</h2>
          <ul>
	          <li>
		          <h3>Total <span><%= @users %></span></h3>
		        </li>
		        <li>
		          <h3>Manager <span><%= @managers %></span></h3>
		        </li>
		        <li>
		          <h3>Admin <span><%= @admins %></span></h3>
		        </li>
		        <li>
			        <h3>Common Characteristics</h3><br>
			        <ol>
			        <li>
				        Openness <span><%= @open %></span>
				      </li>
			        <li>
				        Planning <span><%= @plan %></span>
				      </li>
			        <li>
				        Sociality <span><%= @social %></span>
				      </li>
			        <li>
				        Attitude <span><%= @attitude %></span>
				      </li>
			        <li>
				        Emotion <span><%= @emotion %></span>
				      </li>
			        <li>
				        Cleanliness <span><%= @clean %></span>
				      </li>
			        <li>
				        Energy <span><%= @energy %></span>
				      </li>
				      </ol>
			      </li>
	        </ul>
        </div>
        <div class="adminColumn">
          <h2>
            <%= image_tag("shelterIcon.png", alt: "Shelter") %>
            <%= @shelters %> Shelters
          </h2>
          <ul>
	          <li>
		          <% @shelters_state.each do |n| %>
		          <h3><%= n[0] %> <span><%= n[1] %></span></h3><br>
		          <% end %>
		        </li>
	        </ul>
        </div>
      </div>
    </div>
  </div>
</div>