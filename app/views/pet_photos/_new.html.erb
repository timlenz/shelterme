<div id="addPhoto" class="modal" data-backdrop="static" data-keyboard="false">
  <div class="modal-inner">
    <div class="mediaModal">
      <p>Please select a photo to upload:</p>
      <%= simple_form_for @pet_photo, :html => {:multipart => true} do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.hidden_field :pet_id %>
        <%= f.file_field :image, class: "btn-media", style: "width:350px;" %>
        <br>
        <%= f.button :submit, "Save", class: "formBtn", style: "width:145px;" %>
        <button class="text-close <%= @pet_photo.pet.pet_photos.size == 0 ? 'hide' : '' %>" data-dismiss="modal">Cancel</button>
        <%= link_to "Photo hints", help_path, style: "line-height:28px;font-size:12px;" %>
      <% end %>
    </div>
    <div id="loadingPhoto" class="hide">
    	<%= image_tag("wheel.gif")%>
      <h2 style="text-align:center;">Loading...</h2>
    </div>
  </div>
</div>

<script>
$(function(){
	// Show loading interstitial during photo upload
	$('#new_pet_photo :submit').click(function(){
		$('.mediaModal').hide();
		$('#loadingPhoto').show();
	});
});
</script>