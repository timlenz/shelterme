<div class="pet-tile editPhoto">
  <div class="tile-photo">
    <%= link_to image_tag(f.image_url.to_s.gsub!(/upload/,"upload/a_exif,c_fill,g_faces,h_200,r_8,w_300/w_75,g_south_east,l_watermark_semq96,x_5,y_5")), 
        [f.pet.shelter, f.pet], 
        title: "Photo of #{f.pet.name != '' ? f.pet.name : f.pet.animal_code} contributed by #{f.user ? f.user.name : "Shelter Me"}" %>
  </div>
  <% if f.pet.pet_photos.size > 1 %>
    <% if f.primary? %>
	    <span class="makeDefault" style="padding-top:6px;">Primary</span>
	  <% else %>
      <%= simple_form_for f, html: {class: "makeDefault"} do |fp| %>
        <%= fp.submit "Make Primary" %>
      <% end %>
    <% end %>
    <%= form_for f, html: {multipart: true} do |p| %>
      <%= link_to "Delete", f, method: :delete, class: "deleteMedia", confirm: "Are you certain you want to delete this photo of #{f.pet.name != '' ? f.pet.name : f.pet.animal_code}?" %>
    <% end %>  
  <% else %>
    <span class="makeDefault" style="padding-top:6px;">Primary</span>
    <%= link_to "Delete", "#", class: "deleteMedia", style: "color:#999;", rel: "tooltip", title: "Cannot delete the only photo for a pet" %>
  <% end %>
</div>