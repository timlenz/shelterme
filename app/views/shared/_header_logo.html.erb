<div class="headerLogo">
  <% if params[:controller] == 'pets' %>
    <% if params[:action] == 'show' %>
      <% if @pet.species.name == 'dog' %>
        <%= image_tag("dogIcon.png", alt: "Dog") %>
      <% else %>
        <%= image_tag("catIcon.png", alt: "Cat") %>
      <% end %>
    <% else %>
      <%= image_tag("dogIcon.png", alt: "Dog") %>
    <% end %>
  <% elsif params[:controller] == 'shelters' %>
    <%= image_tag("shelterIcon.png", alt: "Shelter") %>
  <% elsif params[:controller] == 'users' and params[:action] == 'index'%>
    <%= image_tag("editProfileIcon.png", alt: "Users") %>
  <% elsif params[:controller] == 'users' and params[:action] == 'managers'%>
    <%= image_tag("shelterIcon.png", alt: "Shelter") %>
  <% elsif params[:controller] == 'users' %>
    <%= avatar_for @user, size: 63 %>
  <% elsif params[:controller] == 'microposts' %>
    <%= image_tag("editIcon.png", alt: "Comments") %>
  <% elsif params[:controller] == 'pet_photos' %>
    <%= image_tag("photoIcon.png", alt: "Photos") %>
  <% elsif params[:controller] == 'pet_videos' %>
    <%= image_tag("videoIcon.png", alt: "Videos") %>
  <% end %>
</div>