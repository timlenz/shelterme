<% if f.secondary_color == nil %>
  <%= link_to "", "#", class: "petTile #{f.fur_length.length}#{f.primary_color.color.capitalize.gsub(/-/,"")}Icon",
      rel: "tooltip", title: f.fur_length.length.humanize + " " + f.primary_color.color.gsub(/-/,"") + " fur" %>
<% else %>
  <%= link_to "", "#", class: "petTile #{f.fur_length.length}#{f.primary_color.color.capitalize}#{f.secondary_color.color.capitalize}Icon",
      rel: "tooltip", title: f.fur_length.length.humanize + " " + f.primary_color.color + " & " + f.secondary_color.color + " fur" %>
<% end %>