<header class="navbar navbar-fixed-top noPrint">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="nav-collapse">
        <div>
          <%= link_to image_tag("silhouetteWhite.png", alt: "Home", class: "navLogo"), root_path %>
          <ul class="nav pull-left">
            <li>
              <% if params[:controller] == 'pets' and (params[:action] == 'addpet' or params[:action] == 'new') %>
                <%= image_tag("addPetOn.png", alt: "Add Pet", class: "currentNav") %>
              <% else %>
                <%= link_to image_tag("addPetOff.png", mouseover: "addPetOver.png", alt: "Add Pet"), addpet_path %>
              <% end %>
            </li>
            <li class="vertDivide"> </li>
            <li>
              <% if params[:controller] == 'searches' and params[:action] == 'new' %>
                <%= image_tag("findPetOn.png", alt: "Find Pet", class: "currentNav") %>
              <% else %>
                <%= link_to image_tag("findPetOff.png", mouseover: "findPetOver.png", alt: "Find Pet"), findpet_path %>
              <% end %>
            </li>
            <li class="vertDivide"> </li>
            <li>
              <% if params[:action] == 'find' and params[:controller] == 'shelters' %>
                <%= image_tag("findShelterOn.png", alt: "Find Shelter", class: "currentNav") %>
              <% else %>
                <%= link_to image_tag("findShelterOff.png", mouseover: "findShelterOver.png", alt: "Find Shelter"), findshelter_path %>
              <% end %>
            </li>
            <% if signed_in? %>
              <li class="vertDivide"> </li>
              <li>
                <% if params[:action] == 'matchme' %>
                  <%= image_tag("matchMeOn.png", alt: "Match Me", class: "currentNav") %>
                <% else %>
                  <%= link_to image_tag("matchMeOff.png", mouseover: "matchMeOver.png", alt: "Match Me"), matchme_path %>
                <% end %>
              </li>
            <% end %>
          </ul>
          <ul class="nav pull-right">
            <% if signed_in? %>
              <li id="fat-menu" class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" style="padding:14px 28px 10px;">
                  <%= image_tag("profileIcon.png", alt: "Profile") %> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li class="menu-photo">
                    <%= gravatar_for current_user, size: 26 %>
                    <div class="menu-name"><%= current_user.name %></div>
                  </li>
                  <li class="divider"></li>
                  <li><%= link_to "My profile", current_user %></li>
                  <li><%= link_to "Edit my profile", edit_user_path(current_user) %></li>
                  <li><%= link_to "My sponsored pets", sponsored_path %></li>
                  <li><%= link_to "My followed pets", followed_path %></li>
                  <li><%= link_to "My updates", activity_path %></li>
                  <li class="divider"></li>
                  <% if current_user.admin? %>
                  <li><%= link_to "Statistics", statistics_path %></li>
                  <li><%= link_to "All Pets", p_path %></li>
                  <li><%= link_to "All Users", u_path %></li>
                  <li><%= link_to "All Shelters", s_path %></li>
                  <li><%= link_to "All Managers", sa_path %></li>
                  <li class="divider"></li>
                  <% end %>
                  <li style="text-align:left;">
                    <%= link_to "Sign out", signout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
            <% else %>
              <% if params[:controller] == 'sessions' and params[:action] == 'new' %>
                <li class="signInit signInon" style= "padding:18px 30px 14px;">Sign in</li>
              <% else %>  
                <li class="signInit"><%= link_to "Sign in", signin_path, style: "padding:17px 30px 14px;" %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
<div class="clearfix noPrint"></div>