<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= canonical_link_tag %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %>
		<% if params[:controller] == 'pets' && params[:action] == 'show' && (@pet.pet_photos.size == 0 and @pet.user == current_user) %>
		<% end %>
  </head>
