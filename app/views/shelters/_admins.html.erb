<div class="shelterAdmin">
  <div class="admin">
    <%= link_to avatar_for(f), f, size: 50 %>
    <p><%= link_to f.name, f %><br>
    <%= f.location %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("addIcon.png", class: "icon", width: "40", height: "40"), "#", rel: "tooltip", title: pluralize(f.pets.count, "Sponsored Pet") %><br>
    <p><%= f.pets.count %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("editIcon.png", class: "icon", width: "40", height: "40"), "#", rel: "tooltip", title: pluralize(f.microposts.count, "Comment") + " Added" %><br>
    <p><%= f.microposts.count %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("matchMeIcon.png", class: "icon", width: "40", height: "40"), "#", rel: "tooltip", title: pluralize(f.watched_pets.count, "Followed Pet") %><br>
    <p><%= f.watched_pets.count %></p>
  </div>
</div>