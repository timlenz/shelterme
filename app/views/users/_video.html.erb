<div class="pet-tile editVideo">
  <div class="tile-photo">
    <% if f.panda_video.status == "fail" %>
    <div class="processing">
      <p>Video upload failed. Please delete this and try uploading the video again.</p>
    </div>
    <% elsif f.thumbnail.status == "success" && f.h264.status == "success" && f.webm.status == "success" %>
    <%= link_to image_tag(f.thumbnail.screenshots.first), [f.pet.shelter, f.pet], title: "#{f.pet.name}" %>
    <% elsif f.thumbnail.status == "fail" or f.h264.status == "fail" or f.webm.status == "fail" %>
    <div class="processing">
      <p><%= f.thumbnail.status == "fail" ? "Thumbnail" : ( f.h264.status == "fail" ? "H264 video" : "WebM video" ) %> encoding failed.<br>Please <%= link_to "let us know", contact_path %>.</p>
    </div>
    <% else %>
    <div class="processing">
     <p><%= f.thumbnail.status == "processing" ? "Processing thumbnail..." : ( f.h264.status == "processing" ? "Processing H264 video..." : "Processing WebM video..." ) %><br>
      Please reload the page in a few minutes.</p>
    </div>
    <% end %>
  </div>
  <% if f.primary? %>
	  <span class="makeDefault" style="padding-top:6px;">Primary</span>
	<% else %>
    <%= simple_form_for f, html: {class: "makeDefault"} do |fp| %>
      <%= fp.submit "Make Primary" %>
    <% end %>
  <% end %>
  <%= form_for f, html: {multipart: true} do |p| %>
    <%= link_to "Delete", f, method: :delete, class: "deleteMedia", confirm: "Are you certain you want to delete this video of #{f.pet.name != '' ? f.pet.name : f.pet.animal_code}?" %>
  <% end %>
</div>