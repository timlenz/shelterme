<li>
  <%= link_to gravatar_for(f), f, size: 50 %>
  <div class="userInfo">
    <h1><%= link_to f.name, f %></h1><br>
    <p><%= f.location %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("addIcon.png", class: "icon"), "#", rel: "tooltip", title: pluralize(f.pets.count, "Sponsored Pet") %><br>
    <p><%= f.pets.count %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("editIcon.png", class: "icon"), "#", rel: "tooltip", title: pluralize(f.microposts.count, "Comment") + " Added" %><br>
    <p><%= f.microposts.count %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("matchMeIcon.png", class: "icon"), "#", rel: "tooltip", title: pluralize(f.watched_pets.count, "Watched Pet") %><br>
    <p><%= f.watched_pets.count %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("shelterIcon.png", class: "icon"), "#", rel: "tooltip", title: pluralize(f.favorites.count, "Favorite Shelter") %><br>
    <p><%= f.favorites.count %></p>
  </div>
  <div class="userIcon">
    <%= link_to image_tag("editProfileIcon.png", class: "icon"), "#", rel: "tooltip", title: pluralize(f.followed_users.count, "Followed User") %><br>
    <p><%= f.followed_users.count %></p>
  </div>
</li>