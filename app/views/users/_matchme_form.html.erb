<%= simple_form_for(@user, remote: true) do |f| %>
  <div class="btnColumn firstColumn">
   <div class="btn-group two-btn btn-graphic btn-required" data-toggle="buttons-radio" data-toggle-name="user[open_value_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Curious</button>
    <button type="button" data-toggle="button" class="btn" value="2">Cautious</button>
  </div>
  <%= f.hidden_field :open_value_id, label: false %>
  <div class="btn-group two-btn btn-graphic btn-required" data-toggle="buttons-radio" data-toggle-name="user[plan_value_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Spontaneous</button>
    <button type="button" data-toggle="button" class="btn" value="2">Disciplined</button>
  </div>
  <%= f.hidden_field :plan_value_id, label: false %>
  <div class="btn-group two-btn btn-graphic btn-required" data-toggle="buttons-radio" data-toggle-name="user[energy_value_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Relaxed</button>
    <button type="button" data-toggle="button" class="btn" value="2">Active</button>
  </div>
  <%= f.hidden_field :energy_value_id, label: false %>
  </div>
  <div class="btnColumn">
  <div class="btn-group two-btn btn-graphic btn-required" data-toggle="buttons-radio" data-toggle-name="user[social_value_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Quiet</button>
    <button type="button" data-toggle="button" class="btn" value="2">Enthusiastic</button>
  </div>
  <%= f.hidden_field :social_value_id, label: false %>
  <div class="btn-group two-btn btn-graphic btn-required" data-toggle="buttons-radio" data-toggle-name="user[attitude_value_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Cynical</button>
    <button type="button" data-toggle="button" class="btn" value="2">Considerate</button>
  </div>
  <%= f.hidden_field :attitude_value_id, label: false %>
  <div class="control-label findLocation">
    <span id="currentLocation"><%= @current_location %></span>
    &nbsp;&nbsp;
    <% unless @current_location == "MapQuest not responding" %>
    <a href="#" id="changeLocation">Change location</a>
    <% end %>
  </div>
  <div class="changeLocation hidden">
    <%= f.text_field :location, value: @current_location, style: "width:280px;margin-bottom:0;" %>
    <p class="help-block">Enter as City, State (e.g. Los Angeles, CA)</p>
  </div>
  </div>
  <div class="btnColumn lastColumn">
    <div class="btn-group two-btn btn-graphic btn-required" data-toggle="buttons-radio" data-toggle-name="user[emotion_value_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Calm</button>
    <button type="button" data-toggle="button" class="btn" value="2">Impatient</button>
  </div>
  <%= f.hidden_field :emotion_value_id, label: false %>
  <div class="btn-group two-btn btn-graphic btn-required" data-toggle="buttons-radio" data-toggle-name="user[clean_value_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Orderly</button>
    <button type="button" data-toggle="button" class="btn" value="2">Cluttered</button>
  </div>
  <%= f.hidden_field :clean_value_id, label: false %>
  <div class="btn-group two-btn btn-graphic" data-toggle="buttons-radio" data-toggle-name="user[species_id]">
    <button type="button" data-toggle="button" class="btn" value="1">Cat</button>
    <button type="button" data-toggle="button" class="btn" value="2">Dog</button>
  </div>
  <%= f.hidden_field :species_id, label: false %>
</div>
  <div class="clearfix"></div>
  <button type="submit", class="btn btn-header match-me", style="width: 153px;font-size:14px;line-height:22px;margin-bottom:10px;margin-right:15px;" disabled="true">
    <%= image_tag("smallMatchIcon.png", style:"margin-top:-4px;", width: "18", height: "16")%>&nbsp; Match Me
  </button>
 <% end %>