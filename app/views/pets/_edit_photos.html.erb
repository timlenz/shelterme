<div class="pet-tile editPhoto">
	<div class="tile-photo">
		<%= image_tag(f.image_url(:thumb).to_s) %>
	</div>
	<% if @pet.pet_photos.size > 1 %>
	<% unless f.primary? %>
	<%= simple_form_for f, html: {class: "makeDefault"} do |fp| %>
	<%= fp.submit "Make Primary" %>
	<% end %>
	<% end %>
	<%= form_for f, html: {multipart: true} do |p| %>
  <%= link_to "Delete", f, method: :delete, class: "deletePhoto", confirm: "Are you certain you want to delete this photo of #{$pet.name}?" %>
  <% end %>
	<% end %>
</div>
  