<% if @pet.refuge_name.present? || @pet.refuge_person.present? %>
<ul>
	<li style="height:80px;">
		<div style="margin-left:10px;margin-top:10px;">
			<p><%= @pet.name ? @pet.name : @pet.animal_code %> is <%= @pet.pet_state.status == "fostered" ? "being fostered" : "at a rescue" %> and is no longer at <%= link_to @pet.shelter.name, @pet.shelter %>.</p><br><br>
			<p>Please contact the <%= @pet.pet_state.status == "fostered" ? "foster" : "rescue" %> directly:</p>
		</div>
	</li>
	<li style="height:80px;">
	  <div class="modalElement modalStep">
	    <div class="listCircle">1</div>
	    <h2>Contact</h2>
	  </div>
	  <div class="modalElement modalInfo">
		<% if @pet.refuge_name.present? %>
		<p><span class="noPrint"><%= @pet.refuge_name %></span>
		  <span class="printText"><%= @pet.refuge_name %></span>
	    </p><br>
		<% end %>
		<% if @pet.refuge_person.present? %>
		<p>
		  <span class="noPrint"><%= @pet.refuge_person %></span>
		  <span class="printText"><%= @pet.refuge_person %></span>
		</p><br>
		<% end %>
		<% if @pet.refuge_email.present? %>
	    <p>
		  <%= @pet.refuge_email %>
		</p><br>
		<% end %>
		<% if @pet.refuge_phone.present? %>
		<p>
		  <%= @pet.refuge_phone %>
	    </p>
		<% end %>
	  </div>
	</li>
	<li style="height:40px;">
	  <div class="modalElement modalStep">
	    <div class="listCircle">2</div>
	    <h2>Ask About</h2>
	  </div>
	  <div class="modalElement modalInfo">
	    <p><%= @pet.name ? @pet.name + " (" + @pet.animal_code + ")" : @pet.animal_code %></p>
	  </div>
	  <div class="clearfix"></div>
	</li>
</ul>
<% else %>
<ul>
	<li style="height:80px;">
		<div style="margin-left:10px;margin-top:10px;">
			<p><%= @pet.name ? @pet.name : @pet.animal_code %> is <%= @pet.pet_state.status == "fostered" ? "being fostered" : "at a rescue" %> and is no longer at <%= link_to @pet.shelter.name, @pet.shelter %>.</p><br><br>
			<p>Please contact the staff at <%= link_to @pet.shelter.name, @pet.shelter %> for more information.</p>
		</div>
	</li>
</ul>
<% end %>