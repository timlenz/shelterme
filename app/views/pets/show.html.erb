<% provide(:title, @pet.slug) %>
<div class="container content">
  <div class="profile-section <%= @pet.pet_state.status %>">
    <div class="pageHeader">
      <%= render "shared/header_logo" %>
      <%= render "pet_info" %>
      <%= render "header_buttons" %>
    </div>
    <div class="row">
      <div class="span8">
        <%= render "photos" %>
        <%= render "legend" %>
				<% unless @pet.pet_state.status == "unavailable"%>
        <%= render "add_media" %>
				<% end %>
        <%= render "videos" %>
      </div>
      <div class="rightColumn">
        <%= render "description" %>
        <%= render "sponsor" %>
        <%= render "social" %>
        <%= render "comments" %>
      </div>
    </div>
  </div>
</div>