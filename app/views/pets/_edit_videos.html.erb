<div class="pet-tile editVideo">
	<div class="tile-photo">
		<% if f.panda_video.status == "success" %>
		<%= image_tag(f.panda_video.encodings["h264"].screenshots.first) %>
		<% end %>
	</div>
	<% if current_user.admin? or @pet.user == current_user or
	  (current_user.manager? && current_user.shelter_id == @pet.shelter.id) or
		f.user == current_user %>
	<% unless f.primary? or (f.user == current_user && !current_user.admin? && !current_user.manager?) %>
		<%= simple_form_for f, html: {class: "makeDefault"} do |fp| %>
			<%= fp.submit "Make Primary" %>
		<% end %>
	<% end %>
	<%= form_for f, html: {multipart: true} do |p| %>
  <%= link_to "Delete", f, method: :delete, class: "deletePhoto", confirm: "Are you certain you want to delete this video of #{@pet.name != '' ? @pet.name : @pet.animal_code}?" %>
	<% end %>
	<% end %>
</div>