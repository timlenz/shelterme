<!-- PINTEREST SHARE -->

<div class="socialItem noPrint">
  <a href="http://pinterest.com/pin/create/button/?url=http%3A%2F%2F<%=request.host_with_port+request.fullpath%>&media=<%= @pet.pet_photos.count > 0 ? (@pet.pet_photos.select{|p| p.primary == true}.count > 0 ? @pet.pet_photos.select{|p| p.primary == true}.first.image_url(:thumb).to_s.gsub(/\:\/\//, '%3A%2F%2F') : @pet.pet_photos.first.image_url(:thumb).to_s.gsub(/\:\/\//, '%3A%2F%2F')) : "" %>&description=<%=@pet.description%>" class="pin-it-button" count-layout="horizontal" target="_blank"><img border="0" src="//assets.pinterest.com/images/PinExt.png" title="Pin It" /></a>
</div>

<!-- END PINTEREST SHARE -->