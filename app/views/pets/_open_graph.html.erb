<meta property="og:title" content="<%= @pet.name != "" ? @pet.name.titleize : @pet.animal_code %> | <%= @pet.shelter.name %> @ Shelter Me" />
<meta property="og:type" content="website" />
<meta property="og:url" content="<%=@canonical_url%>" />
<meta property="og:description" content="<%= truncate(@pet.description, length: 300, separator: '.') %>" />
<% image = @pet.pet_photos.blank? ? "" : @pet.pet_photos.sort_by {|p| p.primary ? 0:1 }.first.image_url.to_s.gsub!(/upload/,'upload/t_profile') %>
<meta property="og:image" content="<%= image %>" />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="594" />
<meta property="og:image:height" content="392" />