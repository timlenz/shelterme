<% provide(:title, "Add Pet") %> 
<div class="container content">
  <div class="profile-section">
    <div class="pageHeader">
      <div class="headerLogo">
        <%= image_tag("addIcon.png", alt: "Add Pet") %>
      </div>
      <div class="headerInfo" style="width:385px;">
        <h1>Create a Pet Profile</h1><br>
      </div>
      <div class="searchButton" id="addPet">
        <%= form_tag addpet_path, method: 'get' do %>
	        <%= label_tag :search, "Enter Animal ID" %>
          <%= text_field_tag :search, params[:search], class: "smallField", rel: "tooltip", title: "Numbers and letters only" %>
          <%= submit_tag "Add", :animal_code => nil, class: "btn btn-header", style: "width: 70px;", confirm: "" %>
        <% end %>
      </div>
    </div>
    <div id="addContent" class="addContent">
      <%= render 'add_initial' %>
    </div>
  </div>  
</div>