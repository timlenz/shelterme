<% provide(:title, "Sign in") %>
<div class="container">
  <div class="signinDialog">
    <div class="row">
      <div class="span6 offset3">
        <%= image_tag("pleaseSignin.png", alt: "Please sign in", class: "formHeader") %>
        <%= form_for(:session, url: sessions_path) do |f| %>

          <%= f.label :email, style: "display:none;" %>
          <%= f.text_field :email, placeholder: "Email" %>
          
          <%= f.label :password, style: "display:none;" %>
          <%= f.password_field :password, placeholder: "Password" %>
          
          <%= f.label :remember_me, class: "subtlep rememberMe" %>
          <%= check_box_tag :remember_me, 1, params[:remember_me], style: "margin-top:-2px;" %>
    
          <%= link_to "Forget your password?", new_password_reset_path, class: "forgotPassword" %>
          <br><br>
          <%= f.submit "", class: "submitButton", style: "width:120px;height:34px;" %>
        <% end %>
        <div class="clearfix"></div><br>
        <div class="center newAccount"><%= link_to "Create a new account".html_safe, signup_path %></div>
      </div>
    </div>
    <div class="row">
      <div class="cornerLogo">
        <%= image_tag("logo_small.png", alt: "Shelter Me") %>
      </div>
    </div>
  </div>
</div>